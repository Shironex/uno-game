{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:frontend": "turbo build --filter=frontend",
    "start:frontend": "cd apps/frontend && npm start",
    "build:backend": "turbo build --filter=backend",
    "start:backend": "cd apps/backend && npm start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "name": "uno-monorepo"
}
